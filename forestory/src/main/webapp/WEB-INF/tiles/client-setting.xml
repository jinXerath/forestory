<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<definition name="content" template="/WEB-INF/views/template/client/clientLayout.jsp">
		<put-attribute name="title" value="Forestory" />
		<put-attribute name="header" value="/WEB-INF/views/template/client/clientHeader.jsp" />
		<put-attribute name="main" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/template/client/clientFooter.jsp" />
	</definition>
	
	<!-- Index -->
	<definition name="*" extends = "content">
		<put-attribute name="title" value="Forestory" />
		<put-attribute name="main" value="/WEB-INF/views/index.jsp" />
	</definition>
	
	
	<definition name="client/*/*" extends = "content">
		<put-attribute name="title" value="Forestory" />
		<put-attribute name="main" value="/WEB-INF/views/client/{1}/{2}.jsp" />
	</definition>
	 
</tiles-definitions>
 